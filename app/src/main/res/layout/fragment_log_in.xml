<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.ui.allFragmnts.logInFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/logoId"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/ic_launcher_background" />


                <RelativeLayout
                    android:id="@+id/donainTxtLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logoId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >



                        <EditText
                            android:id="@+id/domainNameId"
                            android:layout_width="250dp"
                            android:layout_height="48dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="@drawable/edit_text_background"
                            android:drawablePadding="10dp"
                            android:hint="Domain Name"
                            android:paddingLeft="10dp"
                            android:textCursorDrawable="@null"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Connect"
                            android:id="@+id/connectBtn"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"

                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/uLayoutId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/donainTxtLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">



                        <EditText
                            android:id="@+id/usernameId"
                            android:layout_width="250dp"
                            android:layout_height="48dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="@drawable/edit_text_background"
                            android:drawableStart="@drawable/custom_username_icon"
                            android:drawablePadding="10dp"
                            android:hint="Username"
                            android:paddingLeft="10dp"
                            android:textCursorDrawable="@null"
                            android:textColor="@color/black"
                            />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/passLayId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uLayoutId"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/passwordId"
                            android:layout_width="250dp"
                            android:layout_height="48dp"
                            android:background="@drawable/edit_text_background"
                            android:drawableStart="@drawable/custom_password_icon"
                            android:drawablePadding="10dp"
                            android:hint="Password"
                            android:paddingStart="10dp"
                            android:textCursorDrawable="@null"
                            android:textColor="@color/black"
                            tools:ignore="RtlSymmetry" />


                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/checkLayoutid"
                    android:layout_below="@id/passLayId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Password"
                        android:textSize="15sp"
                        />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/logInBtnId"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/checkLayoutid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_btn_back"
                    android:gravity="center"
                    android:text="LOG IN"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/signupTxtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logInBtnId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:text="Sign up now"
                    android:textSize="15sp"

                    tools:ignore="TouchTargetSizeCheck" />

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>
</FrameLayout>