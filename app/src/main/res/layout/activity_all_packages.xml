<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.PackagesFragment.AllPackagesActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/allPackToolbarId1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHieght"
        android:background="@color/toolbarColor"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontalCardId"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="99 Recharge"
        app:titleTextColor="@color/white" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/horizontalCardId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray2"
        app:layout_constraintBottom_toTopOf="@+id/packCardTabLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/gp1LayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/airtel1LayoutId"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/gp1BtnImgId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gp_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gp1BtnImgId"
                android:layout_centerHorizontal="true"
                android:text="GP"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/robi1LayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/teletalk1LayoutId"
            app:layout_constraintStart_toEndOf="@+id/banglaLink1LayoutId"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/robi1BtnImgId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/robi_logo2"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/robi1BtnImgId"
                android:layout_centerHorizontal="true"
                android:text="Robi"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/banglaLink1LayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/robi1LayoutId"
            app:layout_constraintStart_toEndOf="@+id/airtel1LayoutId"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/banglaLink1BtnImgId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/banglalink_logo2"

                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/banglaLink1BtnImgId"
                android:layout_centerHorizontal="true"
                android:text="BanglaLink"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/airtel1LayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/banglaLink1LayoutId"
            app:layout_constraintStart_toEndOf="@+id/gp1LayoutId"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/airtel1BtnImgId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/airtel_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/airtel1BtnImgId"
                android:layout_centerHorizontal="true"
                android:text="Airtel"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/teletalk1LayoutId"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginBottom="1dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/robi1LayoutId"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/teletalk1BtnImgId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/teletalk_logo"

                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teletalk1BtnImgId"
                android:layout_centerHorizontal="true"
                android:text="Teletalk"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/packCardTabLayout1"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/main_home_contain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalCardId"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/packTabLayout1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            app:tabBackground="@drawable/tab_selector"
            app:tabIndicator="@color/Trans"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/black"

            >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/comboTabId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:text="COMBO"
                tools:ignore="HardcodedText" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/dataTabId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA"
                tools:ignore="HardcodedText" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/voiceTabId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOICE"
                tools:ignore="HardcodedText" />


        </com.google.android.material.tabs.TabLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/main_home_contain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/horizontalCardId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/packCardTabLayout1" />

</androidx.constraintlayout.widget.ConstraintLayout>