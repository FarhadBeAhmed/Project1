<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DomainConnectActivity"
    android:gravity="center"
    android:background="@color/white"
    android:id="@+id/ConnectActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/domainPageLogo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/_9rc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/domainPageLogo"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="5dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dNameId"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:background="@color/Trans"
                android:hint="Domain"
                android:padding="5dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/black"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/domainNameEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:focusable="true"
                    android:inputType=""
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                tools:ignore="ObsoleteLayoutParam">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/submit_btn"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="20dp"
                android:text="Connect"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />
            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>





</RelativeLayout>