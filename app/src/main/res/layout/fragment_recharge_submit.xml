<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileRecharge.RechargeSubmitFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pageNormalBackgroundColor"
        android:padding="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/numberLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingRight="8dp"
                android:weightSum="4"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/id_text_view_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/Trans"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Mobile Number"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/mLogosId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:focusable="true"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/operatorLogoId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="7dp"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/operatorEditLogoId"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginVertical="8dp"
                    tools:ignore="RtlSymmetry">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/id_amount_txtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/o"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charge"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/id_chargeTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/o"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/id_totalAmountTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/o"
                            />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_marginVertical="8dp"
                    android:paddingRight="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Enter Pin:"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />


                    <EditText
                        android:id="@+id/id_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:background="@color/Trans"
                        android:hint="Enter your pin"
                        android:maxLength="6"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textCursorDrawable="@color/black"
                        tools:ignore="Autofill,HardcodedText,RelativeOverlap,TextFields" />


                    <ImageButton
                        android:id="@+id/id_submit"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        tools:ignore="ContentDescription,RtlHardcoded" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>